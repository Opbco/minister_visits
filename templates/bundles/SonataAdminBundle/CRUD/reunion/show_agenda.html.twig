{# templates/bundles/SonataAdminBundle/CRUD/reunion/show_agenda.html.twig #}
{% extends '@SonataAdmin/CRUD/base_show_field.html.twig' %}

{% block field %}
    {% set agendaItems = object.agendaItems %}
    
    {% if agendaItems|length > 0 %}
        {% set totalDuration = 0 %}
        {% for item in agendaItems %}
            {% if item.dureeEstimee %}
                {% set totalDuration = totalDuration + item.dureeEstimee %}
            {% endif %}
        {% endfor %}
        
        <div class="callout callout-info">
            <h4><i class="fa fa-list-ol"></i> Agenda Summary</h4>
            <p>
                <strong>{{ agendaItems|length }}</strong> item(s) on the agenda
                {% if totalDuration > 0 %}
                    | Total estimated duration: <strong>{{ totalDuration }} minutes</strong>
                    {% set hours = (totalDuration / 60)|round(0, 'floor') %}
                    {% set minutes = totalDuration % 60 %}
                    {% if hours > 0 %}
                        ({{ hours }}h {% if minutes > 0 %}{{ minutes }}min{% endif %})
                    {% endif %}
                {% endif %}
            </p>
        </div>
        
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="bg-light-blue">
                    <tr>
                        <th width="5%">#</th>
                        <th width="35%">Agenda Item</th>
                        <th width="25%">Presenter</th>
                        <th width="15%">Duration</th>
                        <th width="20%">Description</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in agendaItems %}
                        <tr>
                            <td class="text-center">
                                <span class="badge badge-primary">{{ item.ordre }}</span>
                            </td>
                            <td>
                                <strong>{{ item.titre }}</strong>
                            </td>
                            <td>
                                {% if item.presentateur %}
                                    <i class="fa fa-user text-primary"></i> 
                                    {{ item.presentateur.participantName }}
                                    <br>
                                    <small class="text-muted">
                                        {% if item.presentateur.participantType == 'internal' %}
                                            <span class="label label-primary">Internal</span>
                                        {% else %}
                                            <span class="label label-info">External</span>
                                        {% endif %}
                                    </small>
                                {% else %}
                                    <span class="text-muted">
                                        <i class="fa fa-question-circle"></i> No presenter
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                {% if item.dureeEstimee %}
                                    <span class="label label-info">
                                        <i class="fa fa-clock-o"></i> {{ item.dureeEstimee }} min
                                    </span>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if item.description %}
                                    <small class="text-muted">
                                        {{ item.description|slice(0, 100) }}
                                        {% if item.description|length > 100 %}...{% endif %}
                                    </small>
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        {% if totalDuration > 0 %}
            <div class="progress" style="height: 25px; margin-top: 15px;">
                <div class="progress-bar progress-bar-info" style="width: 100%">
                    <span style="line-height: 25px;">
                        Total Duration: {{ totalDuration }} minutes
                    </span>
                </div>
            </div>
        {% endif %}
    {% else %}
        <div class="alert alert-info">
            <h4><i class="fa fa-info-circle"></i> No Agenda Items</h4>
            <p>No agenda has been set for this meeting yet. Add agenda items to structure the meeting.</p>
        </div>
    {% endif %}
{% endblock %}