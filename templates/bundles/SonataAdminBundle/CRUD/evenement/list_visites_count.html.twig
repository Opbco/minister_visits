{% extends get_admin_template('base_list_field', admin.code) %}

{% block field %}
    {% set count = object.visites|length %}
    
    {% if count > 0 %}
        <span class="badge bg-purple" style="font-size: 0.9em; border-radius: 10px; padding: 5px 10px;">
            <i class="fa fa-building-o"></i> {{ count }}
        </span>
    {% else %}
        <span class="badge bg-gray">
            0
        </span>
    {% endif %}
{% endblock %}