{% set totalMeetings = form.vars.value.myReunions|length %}
{% set attendedMeetings = form.vars.value.myReunions|filter(p => p.status.value == 'attended')|length %}
{% set upcomingMeetings = form.vars.value.myReunions|filter(p => p.reunion.isUpcoming())|length %}
{% set asPresident = form.vars.value.myReunions|filter(p => p.reunion.president == form.vars.value)|length %}
{% set pendingMeetings = form.vars.value.myReunions|filter(p => p.status.value == 'invited')|length %}

<div class="row">
    <div class="col-md-3">
        <div class="small-box bg-aqua">
            <div class="inner">
                <h3>{{ totalMeetings }}</h3>
                <p>Total Meetings</p>
            </div>
            <div class="icon">
                <i class="fa fa-calendar"></i>
            </div>
            <a href="{{ admin.generateObjectUrl('meetings', form.vars.value) }}" class="small-box-footer">
                View all <i class="fa fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-md-3">
        <div class="small-box bg-green">
            <div class="inner">
                <h3>{{ attendedMeetings }}</h3>
                <p>Attended</p>
            </div>
            <div class="icon">
                <i class="fa fa-check-circle"></i>
            </div>
            <div class="small-box-footer">
                {{ totalMeetings > 0 ? ((attendedMeetings / totalMeetings * 100)|round) : 0 }}% attendance rate
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="small-box bg-yellow">
            <div class="inner">
                <h3>{{ upcomingMeetings }}</h3>
                <p>Upcoming</p>
            </div>
            <div class="icon">
                <i class="fa fa-clock-o"></i>
            </div>
            <div class="small-box-footer">
                {% if pendingMeetings > 0 %}
                    {{ pendingMeetings }} awaiting confirmation
                {% else %}
                    All confirmed
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="small-box bg-red">
            <div class="inner">
                <h3>{{ asPresident }}</h3>
                <p>As President</p>
            </div>
            <div class="icon">
                <i class="fa fa-gavel"></i>
            </div>
            <div class="small-box-footer">
                Leadership roles
            </div>
        </div>
    </div>
</div>

{% if totalMeetings > 0 %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Recent Meetings (Last 5)</h3>
        </div>
        <div class="box-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Meeting</th>
                        <th>Role</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for participation in form.vars.value.myReunions|slice(0, 5) %}
                        <tr>
                            <td>
                                <i class="fa fa-calendar"></i>
                                {{ participation.reunion.dateDebut|date('d/m/Y H:i') }}
                            </td>
                            <td>
                                <strong>{{ participation.reunion.objet }}</strong><br>
                                <small class="text-muted">
                                    <i class="fa fa-map-marker"></i> {{ participation.reunion.locationDisplay }}
                                </small>
                            </td>
                            <td>
                                {% if participation.reunion.president == form.vars.value %}
                                    <span class="label label-danger">
                                        <i class="fa fa-gavel"></i> President
                                    </span>
                                {% else %}
                                    <span class="label label-info">
                                        <i class="fa fa-users"></i> Participant
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                {% set status = participation.status.value %}
                                {% if status == 'attended' %}
                                    <span class="label label-success">
                                        <i class="fa fa-check"></i> Attended
                                    </span>
                                {% elseif status == 'absent' %}
                                    <span class="label label-danger">
                                        <i class="fa fa-times"></i> Absent
                                    </span>
                                {% elseif status == 'excused' %}
                                    <span class="label label-warning">
                                        <i class="fa fa-exclamation"></i> Excused
                                    </span>
                                {% elseif status == 'confirmed' %}
                                    <span class="label label-primary">
                                        <i class="fa fa-check-circle"></i> Confirmed
                                    </span>
                                {% else %}
                                    <span class="label label-default">
                                        <i class="fa fa-envelope"></i> Invited
                                    </span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% else %}
    <div class="alert alert-info">
        <i class="fa fa-info-circle"></i> <strong>No meeting participation yet.</strong>
        This person has not been added to any meetings.
    </div>
{% endif %}