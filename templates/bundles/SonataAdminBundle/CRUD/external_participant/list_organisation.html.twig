{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    {% if value %}
        <span class="label label-info">
            <i class="fa fa-building"></i> {{ value }}
        </span>
    {% else %}
        <span class="text-muted">
            <i class="fa fa-user"></i> Independent
        </span>
    {% endif %}
{% endblock %}